{
  "name": "helmwave",
  "displayName": "Helmwave",
  "description": "Comprehensive syntax highlighting, validation, auto-completion, and language support for Helmwave configuration files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "helmwave",
    "helm",
    "kubernetes",
    "yaml",
    "k8s",
    "deployment",
    "charts",
    "validation",
    "syntax-highlighting",
    "auto-completion",
    "intellisense"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "helmwave",
        "aliases": [
          "Helmwave",
          "helmwave"
        ],
        "extensions": [
          ".yml",
          ".yaml"
        ],
        "filenames": [
          "helmwave.yml",
          "helmwave.yaml"
        ],
        "filenamePatterns": [
          "*helmwave.yml",
          "*helmwave.yaml",
          "*_helmwave.yml",
          "*_helmwave.yaml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "helmwave",
        "scopeName": "source.helmwave",
        "path": "./syntaxes/helmwave.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "helmwave.validate",
        "title": "Validate Helmwave Configuration",
        "category": "Helmwave"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
